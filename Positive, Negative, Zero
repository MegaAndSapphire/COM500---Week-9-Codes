#include <stdio.h>

int is_positive(int num);
int is_negative(int num);
int is_zero(int num);

int main(){
    int num;
    printf(">\n");
    scanf("%d", &num);
    printf("Calling is_positive: %d\n", is_positive(num));
    printf("Calling is_negative: %d\n", is_negative(num));
    printf("Calling is_zero: %d\n", is_zero(num));
}

int is_positive(int num){
    if (num > 0){
        return 1;
    }
    else {
        return 0;
    }
}
int is_negative(int num){
    if (num < 0){
        return 1;
    }
    else {
        return 0;
    }
}
int is_zero(int num){
    if (num == 0){
        return 1;
    }
    else {
        return 0;
    }
}
